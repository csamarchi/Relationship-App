      <div class="col">
    <h1>Ex Index Page</h1></br>

    <!-- Search Form -->
    <div class="searchForm">
      <form action="/ex/showAll" method="POST">
        <input type="text" name="name" placeholder="Search...">
        <button type="input" class="btn btn-secondary" placeholder="Search...">Submit</button>
      </form></br>
    </div>
  <main>
    <div class="container">
      <div class="row">
       <% for (let i = 0; i < ex.length; i++) { %>
        <div class="col-4">
         <form action="/ex/<%=ex[i].id%>" method="GET">
           <a href="/ex/<%=ex[i].id%>"><%=ex[i].name%></a>
         </form>
       <img src="<%=ex[i].image%>" alt="">
          </div>
       <%  } %>

         </div>
         </div>
  </main>
  <ul>
    <form action="/ex/new">
    <button type="input" class="btn btn-secondary">Add Ex</button>
    </form>
  </ul>
    <!-- Optional JavaScript -->
