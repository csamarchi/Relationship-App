    <body>
        <!--      Nav Bar-->
        <nav class="navbar navbar-expand-lg navbar-light bg-secondary">
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a><br>
              </li>
              <li class="nav-item">
