    <!--      Page Title -->

        <!--      Page Title -->
        <div class="col">

            <main>
                <h1> Edit
                    <%=ex.name%>
                </h1>
                <img src="<%=ex.image%>" alt=""></br>
                <ul class="list-group">
                    <form action="/ex/<%=ex.id%>?_method=PUT" method="POST">
                        <li class="list-group-item"> Name: </br> <input type="text" name="name" value="<%=ex.name%>"></li></br></br>


    <!--
                        <li class="list-group-item"> Sex: </br> <input type="radio" name="sex" value="male"> male
                            <input type="radio" name="sex" value="female"> female </li></br></br>
    -->


                        <li class="list-group-item"> Location: </br> <input type="text" name="location" value="<%=ex.location%>"></li></br></br>


                        <li class="list-group-item"> Paste Image: </br> <input type="text" name="image" value="<%=ex.image%>"></li></br></br>


                        <li class="list-group-item"> Their Best Quality: </br> <input type="text" name="best" value="<%=ex.best%>"></li></br></br>


                        <li class="list-group-item"> Worst Quality: </br> <input type="text" name="worst" value="<%=ex.worst%>"> </li></br></br>


                        <li class="list-group-item"> Attractiveness Scale 1-10: <input type="range" min="1" max="10" name="attractiveness" value="<%=ex.attractiveness%>"></li></br></br>


                        <li class="list-group-item"> Do they have a sense of humor?</br><input type="radio" name="humor" value="yes"> So funny</br>
                            <input type="radio" name="humor" value="kinda"> Kinda</br>
                            <input type="radio" name="humor" value="no"> No sense of humor</li></br></br>


                        <li class="list-group-item"> Are they Cheap? <input type="radio" name="cheap" value="yes">yes
                            <input type="radio" name="cheap" value="no"> no </li></br></br>


                        <li class="list-group-item"> Good Attitude? <input type="radio" name="attitude" value="yes"> yes
                            <input type="radio" name="attitude" value="no"> no </li></br></br>


                        <li class="list-group-item"> Anything else you would like to add </br> <input type="text" name="description" value="<%=ex.description%>"></li></br>
                      </br><button type="submit" class="btn btn-secondary">Submit</button>

                    </form>
                </ul>
                </br></br>
                <section>
                    <form action="/ex/<%=ex.id%>?_method=DELETE" method="POST">
                      <button type="submit" class="btn btn-secondary">Delete Ex</button></br>
                    </form>
                </section>
        </div>
        </main>
        <!-- Optional JavaScript -->
